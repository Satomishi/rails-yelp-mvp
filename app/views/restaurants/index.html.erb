<div class="d-flex justify-content">
  <h1>List of all restaurants</h1>
  <%= link_to 'New', new_restaurant_path, class: "btn btn-outline-primary" %>
</div>
<ul>
  <% @restaurants.each do |r| %>
    <li>
      <h3><%= link_to r.name, restaurant_path(r) %></h3>
      <p><%= r.address %></p>
    </li>
  <% end %>
</ul>
